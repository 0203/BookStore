@model IEnumerable<BookStoreWeb.Models.Domain.Publisher>
@{
}

<div class="container pt-5 pb-5">
    <div class="row">
        <div class="col-md-6 pb-2">
            <a href="/Publisher/Add" class="btn btn-dark">Add more</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Book Publisher List</h3>
                <table class="table table-hover">
                    <thead>
                        <tr>
                        <th scope="col">Publisher</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr class="table-light">
                            <td>@item.PublisherName</td>
                            <td>
                                <a class="btn btn-success" href="/Publisher/Update?id=@item.Id">Edit</a> |
                                <a class="btn btn-danger" onclick="return window.confirm("Are you sure?")" href="/Publisher/Delete?id=@item.Id">Delete</a></td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
        </div>
    </div>
</div>

