@model IEnumerable<BookStoreWeb.Models.Domain.Book>
@{
}

<div class="container pt-5 pb-5">
    <div class="row">
        <div class="col-md-8 pb-2">
            <a href="/Book/Add" class="btn btn-dark">Add more</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <h3>Book List</h3>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Isbn</th>
                            <th scope="col">Total Pages</th>
                            <th scope="col">Author</th>
                            <th scope="col">Publisher</th>
                            <th scope="col">Genre</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr class="table-light">
                                <td>@item.Title</td>
                                <td>@item.Isbn</td>
                                <td>@item.TotalPages</td>
                                <td>@item.AuthorName</td>
                                <td>@item.PublisherName</td>
                                <td>@item.GenreName</td>
                                <td><a class="btn btn-success" href="/Book/Update?id=@item.Id">Edit</a> | 
                                <a class="btn btn-danger" onclick="return window.confirm("Are you sure?")" href="/Book/Delete?id=@item.Id">Delete</a></td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
        </div>
    </div>
</div>

