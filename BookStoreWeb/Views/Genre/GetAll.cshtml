@model IEnumerable<BookStoreWeb.Models.Domain.Genre>
@{
}

<div class="container pt-5 pb-5">
    <div class="row">
        <div class="col-md-6 pb-2">
            <a href="/Genre/Add" class="btn btn-dark">Add more</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Book Genre List</h3>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Genre</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr class="table-light">
                                <td>@item.Name</td>
                                <td><a class="btn btn-success" href="/Genre/Update?id=@item.Id">Edit</a> | 
                                <a class="btn btn-danger" onclick="return window.confirm("Are you sure?")" href="/Genre/Delete?id=@item.Id">Delete</a></td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
        </div>
    </div>
</div>

