@model BookStoreWeb.Models.Domain.Book

<div class="container pt-5 pb-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Book</h3>
            <form asp-controller="Book" asp-action="Add" method="post">
                <div class="form-group pb-2">
                    <label for="Title">Book Title *</label>
                    <input type="text" class="form-control" placeholder="Enter Book Title" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>

                    <label for="Isbn">Isbn *</label>
                    <input type="text" class="form-control" placeholder="Enter Book Isbn" asp-for="Isbn">
                    <span asp-validation-for="Isbn" class="text-danger"></span>

                    <label for="TotalPages">Total Pages *</label>
                    <input type="number" class="form-control" placeholder="Enter Book Total Pages" asp-for="TotalPages">
                    <span asp-validation-for="TotalPages" class="text-danger"></span>

                    <label for="GenreId">Genre *</label>
                    <select asp-for="GenreId" asp-items="Model.GenreList" class="form-control">
                        <option value="">--- Select ---</option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>

                    <label for="AuthorId">Author *</label>
                    <select asp-for="AuthorId" asp-items="Model.AuthorList" class="form-control">
                        <option value="">--- Select ---</option>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>

                    <label for="PublisherId">Publisher *</label>
                    <select asp-for="PublisherId" asp-items="Model.PublisherList" class="form-control">
                        <option value="">--- Select ---</option>
                    </select>
                    <span asp-validation-for="PublisherId" class="text-danger"></span>
                    
                </div>
                    @if (TempData["msg"] != null)
                    {
                        @TempData["msg"]
                    }
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a href="/Book/GetAll" class="btn btn-info">List</a>
                </div>
            </form>
        </div>
    </div>
</div>


